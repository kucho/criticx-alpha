<h1>All the companies</h1>

<%= link_to "New Company", new_company_path %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.country %></td>
      <td><%= link_to 'Show', company %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
      <td><%= link_to 'Delete', company_path(company), method: :delete, data: { confirm: "Are you sure, m8?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>