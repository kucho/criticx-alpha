<h1>All the games</h1>

<%= link_to "New Game", new_game_path %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Rating</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.rating %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
  </tr>
  <% end %>
  </tbody>
</table>